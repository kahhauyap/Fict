<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kah.fict">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hamburger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Homepage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Picture"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MacrosCalculator"
            android:screenOrientation="portrait" />
        <activity android:name=".SelectFood"
            android:screenOrientation="portrait"/>
        android:name=".AppController"
        android:allowbackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/fict"
        android:theme="@style/AppTheme"
        <activity
            android:name=".DailyPage"
            android:label="@string/title_activity_daily_page"
            android:screenOrientation="portrait" />
        <activity android:name=".History"
            android:screenOrientation="portrait"/>
        <activity android:name=".DisplayHistory"
            android:screenOrientation="portrait"/>
        <activity android:name=".ManualAdd"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>